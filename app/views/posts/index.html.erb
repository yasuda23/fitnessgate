<h1>Posts</h1>

<% if @posts.any? %>
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <h2></h2>
          <% if post.image.attached? %>
            <%= image_tag post.image, class: "card-img-top", size: "300x300" %>
          <% end %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post %></h5>
            <p class="card-text"><%= post.workout_details %></p>
            <% if post.video.attached? %>
              <%= video_tag post.video, controls: true, class: "card-img-top", size: "300x300" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            投稿日時: <%= post.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p>投稿してください！！</p>
<% end %>

<%= link_to 'New Post', new_post_path, class: "btn btn-primary" if user_signed_in? %>